<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LetsLearnAvalonia.App"
             xmlns:local="using:LetsLearnAvalonia"
             Design.DesignWidth="300" Design.DesignHeight="300">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Styles/LetsLearnAvalonia.axaml"/>
        <!--Below style is required for datagrids-->
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
    </Application.Styles>

    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryForeground" Color="#CFCFCF"/>
        <SolidColorBrush x:Key="PrimaryBackground" Color="#14172D"/>
        <LinearGradientBrush x:Key="PrimaryGradientBackground" StartPoint="0%,0%" EndPoint="100%,0%">
            <GradientStop Offset="0" Color="#111214" />
            <GradientStop Offset="1" Color="#151E3E"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="PrimaryHoverBackground" Color="#333B5A"/>
        <SolidColorBrush x:Key="PrimaryHoverForeground" Color="#FFFFFF"/>

        <FontFamily x:Key="PhosphorFill">/Assets/Fonts/Phosphor-Fill.ttf#Phosphor-Fill</FontFamily>
        <FontFamily x:Key="Phosphor">/Assets/Fonts/Phosphor.ttf#Phosphor</FontFamily>
        <!-- NOTE: The "#Noto Sans JP" is the annotation for the EXACT NAME of
             the font used. If you have multiple that have the same name, this
             is a requirement to ensure that when you specify a file path font,
             you must also explicitly state the name afterward so it knows which
             one to use or something.-->
        <FontFamily x:Key="NotoSansJP">/Assets/Fonts/NotoSansJP.ttf#Noto Sans JP</FontFamily>
    </Application.Resources>

</Application>
