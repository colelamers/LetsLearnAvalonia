<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LetsLearnAvalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="200"
        Width="1024" Height="600"
        x:Class="LetsLearnAvalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/images/icon.ico"
        Title="LetsLearnAvalonia">

    <Grid Background="{DynamicResource PrimaryBackground}" ColumnDefinitions="Auto, *">
        <!-- Borders are the generic wrappers around stack panels since 
        stack panels do not have that and they fit to their parent.-->
        <Border Grid.Column="0" Padding="20" Background="{DynamicResource PrimaryGradientBackground}">
            <Grid RowDefinitions="*, Auto">
                <StackPanel Grid.Row="0" Spacing="12">
                    <Image Source="{SvgImage /Assets/images/logo.svg}" Width="220"/>

                    <Button Content="Home" HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <!--NOTE: &#x...; is functionally equivalent to U+ in UNICODE.
                                Where "..." is the code, less the U+ portion of it. Like 
                                CSS, it must end with a ";".-->
                            <Label Classes="icon" Content="&#xE470;"/>
                            <Label Classes="noto" Content="Home"/>
                        </StackPanel>
                    </Button>
                    <Button Content="Process" HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <!--NOTE: &#x...; is functionally equivalent to U+ in UNICODE.
                                Where "..." is the code, less the U+ portion of it. Like 
                                CSS, it must end with a ";".-->
                            <Label Classes="icon" Content="&#xE07E;"/>
                            <Label Classes="noto" Content="Process"/>
                        </StackPanel>
                    </Button>
                    <Button Content="Actions" HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <!--NOTE: &#x...; is functionally equivalent to U+ in UNICODE.
                                Where "..." is the code, less the U+ portion of it. Like 
                                CSS, it must end with a ";".-->
                            <Label Classes="icon" Content="&#xEE82;"/>
                            <Label Classes="noto" Content="Actions"/>
                        </StackPanel>
                    </Button>
                    <Button Content="Macros" HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <!--NOTE: &#x...; is functionally equivalent to U+ in UNICODE.
                                Where "..." is the code, less the U+ portion of it. Like 
                                CSS, it must end with a ";".-->
                            <Label Classes="icon" Content="&#xE6A0;"/>
                            <Label Classes="noto" Content="Macros"/>
                        </StackPanel>
                    </Button>
                    <Button Content="Reporter" HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <!--NOTE: &#x...; is functionally equivalent to U+ in UNICODE.
                                Where "..." is the code, less the U+ portion of it. Like 
                                CSS, it must end with a ";".-->
                            <Label Classes="icon" Content="&#xED0C;"/>
                            <Label Classes="noto" Content="Reporter"/>
                        </StackPanel>
                    </Button>
                    <Button Content="History" HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <!--NOTE: &#x...; is functionally equivalent to U+ in UNICODE.
                                Where "..." is the code, less the U+ portion of it. Like 
                                CSS, it must end with a ";".-->
                            <Label Classes="icon" Content="&#xED9A;"/>
                            <Label Classes="noto" Content="History"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <Button Classes="transparent" Grid.Row="1">
                    <Label Classes="icon-only" Content="&#xE272;"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
