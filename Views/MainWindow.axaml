<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LetsLearnAvalonia.ViewModels"
        xmlns:view="using:LetsLearnAvalonia.Views"
        xmlns:c="clr-namespace:LetsLearnAvalonia.Controls"

        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        MinWidth="1400" MinHeight="900"
        Width="1400" Height="900"
        x:Class="LetsLearnAvalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/images/icon.ico"
        Title="LetsLearnAvalonia">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid Background="{DynamicResource PrimaryBackground}" ColumnDefinitions="Auto, *">

        <ContentControl Grid.Column="1" Content="{Binding CurrentPage}"/>
        <!-- Borders are the generic wrappers around stack panels since 
        stack panels do not have that and they fit to their parent.-->
        <Border Grid.Column="0" Padding="20" 
            Background="{DynamicResource PrimaryGradientBackground}">
            <Grid RowDefinitions="*, Auto">
                <StackPanel Grid.Row="0" Spacing="12">
                    <Image PointerPressed="SvgImage_PointerPressed" 
                        Source="{SvgImage /Assets/images/logo.svg}" 
                        IsVisible="{Binding SideMenuExpanded}" Width="220"/>
                    <Image PointerPressed="SvgImage_PointerPressed" 
                        Source="{SvgImage /Assets/images/icon.svg}" 
                        IsVisible="{Binding !SideMenuExpanded}" Width="22"/>
                    <!--NOTE: &#x...; is functionally equivalent to U+ in UNICODE.
                        Where "..." is the code, less the U+ portion of it. Like 
                        CSS, it must end with a ";".-->
                    <c:IconButton
                        IconText="&#xE470;"
                        HorizontalAlignment="Stretch"
                        Classes.active="{Binding HomePageIsActive}"
                        Command="{Binding GoToHomeCommand}">
                        <Label Classes="noto" Content="Home" IsVisible="{Binding SideMenuExpanded}"/>
                    </c:IconButton>
                    <c:IconButton
                        IconText="&#xE07E;"
                        HorizontalAlignment="Stretch"
                        Classes.active="{Binding ProcessPageIsActive}"
                        Command="{Binding GoToProcessCommand}">
                        <Label Classes="noto" Content="Process" IsVisible="{Binding SideMenuExpanded}"/>
                    </c:IconButton>
                    <c:IconButton
                        IconText="&#xe7f2;"
                        HorizontalAlignment="Stretch"
                        Classes.active="{Binding ActionsPageIsActive}"
                        Command="{Binding GoToActionsCommand}">
                        <Label Classes="noto" Content="Actions" IsVisible="{Binding SideMenuExpanded}"/>
                    </c:IconButton>
                    <c:IconButton
                        IconText="&#xE6A0;"
                        HorizontalAlignment="Stretch"
                        Classes.active="{Binding MacrosPageIsActive}"
                        Command="{Binding GoToMacrosCommand}">
                        <Label Classes="noto" Content="Macros" IsVisible="{Binding SideMenuExpanded}"/>
                    </c:IconButton>
                    <c:IconButton
                        IconText="&#xED0C;"
                        HorizontalAlignment="Stretch"
                        Classes.active="{Binding ReporterPageIsActive}"
                        Command="{Binding GoToReporterCommand}">
                        <Label Classes="noto" Content="Reporter" IsVisible="{Binding SideMenuExpanded}"/>
                    </c:IconButton>
                    <c:IconButton
                        IconText="&#xED9A;"
                        HorizontalAlignment="Stretch"
                        Classes.active="{Binding HistoryPageIsActive}"
                        Command="{Binding GoToHistoryCommand}">
                        <Label Classes="noto" Content="History" IsVisible="{Binding SideMenuExpanded}"/>
                    </c:IconButton>
                </StackPanel>
                <Button Classes="transparent" Grid.Row="1"
                        Classes.active="{Binding SettingsPageIsActive}"
                        Command="{Binding GoToSettingsCommand}">
                    <Label Classes="icon-only" Content="&#xE272;"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
